<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FichadaBinser.Views.EditarDiaPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    Title="Editar Día">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding EditarDia}">
            <StackLayout
            Padding="10">
                <Label
                    FontSize="Large"
                    HorizontalOptions="CenterAndExpand"
                    Margin="0,5,0,0"
                    Text="{Binding DateShowing, Mode=TwoWay}">
                </Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        HorizontalTextAlignment="End"
                        Text="Hora Ingreso"
                        VerticalOptions="Center">
                    </Label>
                    <TimePicker
                        Grid.Column="1"
                        Grid.Row="0"
                        Time="{Binding EntryTimeSpan, Mode=TwoWay}">
                    </TimePicker>
                    
                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalTextAlignment="End"
                        Text="Hora Inicio Almuerzo"
                        VerticalOptions="Center">
                    </Label>
                    <TimePicker
                        Grid.Column="1"
                        Grid.Row="1"
                        Time="{Binding StartLunchTimeSpan, Mode=TwoWay}">
                    </TimePicker>
                    
                    <Label
                        Grid.Column="0"
                        Grid.Row="2"
                        HorizontalTextAlignment="End"
                        Text="Hora Fin Almuerzo"
                        VerticalOptions="Center">
                    </Label>
                    <TimePicker
                        Grid.Column="1"
                        Grid.Row="2"
                        Time="{Binding EndLunchTimeSpan, Mode=TwoWay}">
                    </TimePicker>
                    
                    <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        HorizontalTextAlignment="End"
                        Text="Hora Egreso"
                        VerticalOptions="Center">
                    </Label>
                    <TimePicker
                        Grid.Column="1"
                        Grid.Row="3"
                        Time="{Binding ExitTimeSpan, Mode=TwoWay}">
                    </TimePicker>
                </Grid>
                <Grid
                    Margin="0,0,0,0"
                    VerticalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button
                        BackgroundColor="Navy"
                        BorderRadius="23"
                        Command="{Binding SaveCommand}"
                        Grid.Column="0"
                        HeightRequest="43"
                        HorizontalOptions="FillAndExpand"
                        Text="Guardar"
                        TextColor="White">
                    </Button>
                    <Button
                        BackgroundColor="Navy"
                        BorderRadius="23"
                        Command="{Binding CancelCommand}"
                        Grid.Column="1"
                        HeightRequest="43"
                        HorizontalOptions="FillAndExpand"
                        Text="Cancelar"
                        TextColor="White">
                    </Button>
                </Grid>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>